{
  "compilerOptions": {
    "target": "es2019",
    // Use Node16 module for modern resolution; still emits CJS by default here
    "module": "Node16",
    "lib": ["es2019"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node"],
    // Node16 resolver to match
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/app/**"]
}
