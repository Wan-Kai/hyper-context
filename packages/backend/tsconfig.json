{
  "compilerOptions": {
    "target": "es2019",
    // Use Node16 module + resolver; will emit CJS by default since package.json lacks "type":"module"
    "module": "Node16",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    // Node16 resolution; dynamic import is used where ESM interop is needed
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    // Keep compatibility warnings quiet on TS 5.x if needed.
    // Note: not required once all deprecations are addressed.
    // "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/app/**"]
}
