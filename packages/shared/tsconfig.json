{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    // Use modern resolution to avoid deprecated Node10 algorithm.
    // 'bundler' matches how tools like Vite/Webpack resolve packages and supports exports/imports.
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
